	name = "mec_asari_01_starbase_outpost_entity"
	pdxmesh = "mec_asari_01_starbase_frame_mesh"
	
	default_state = "idle"
	state = { name = "idle" animation = "idle" animation_blend_time = 5 animation_speed = @starbase_anim_speed }
	state = { name = "construction" animation = "construction" }
	
	scale = @starbase_scale
	
	game_data = {
		size = @starbase_gamescale
	}
}

# MESH #
