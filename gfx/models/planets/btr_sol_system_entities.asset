
#Mercury
entity = {
	name = "mercury_planet_01_entity"
	pdxmesh = "planet_non_clouded_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "mercury_01_diffuse.dds"
	texture_normal = "mercury_01_normal.dds"
	texture_specular = "mercury_01_specular.dds"
	}
	
	##pole texture override
	meshsettings = {
	name = "polesShape"
	texture_diffuse = "poles_barren_1_diffuse.dds"
	texture_normal = "poles_barren_1_normal.dds"
	texture_specular = "poles_barren_1_specular.dds"
	}	
	
	default_state = "idle"
	playback_rate = -1.0 # Rotation is reversed
	state = { name = "idle" animation = "idle" time_offset = { 0 100 } 
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
}

